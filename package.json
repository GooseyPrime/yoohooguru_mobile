{
  "name": "yoohoo-guru",
  "version": "1.0.0",
  "description": "A comprehensive skill-sharing platform where users exchange skills, discover purpose, and create exponential community impact",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:web\"",
    "dev:web": "cd apps/web && npm run dev",
    "dev:backend": "cd apps/backend && npm run dev",
    "dev:mobile": "cd apps/mobile && npm run start",
    "build": "npm run build:sdk && npm run build:web && npm run build:backend",
    "build:web": "cd apps/web && npm run build",
    "build:backend": "cd apps/backend && npm run build",
    "build:mobile": "cd apps/mobile && npm run build",
    "build:sdk": "cd packages/sdk && npm run build",
    "build:fast": "cd apps/web && npm run build:fast && cd ../backend && npm run build",
    "build:clean": "./scripts/optimize-build.sh",
    "build:analyze": "cd apps/web && npm run build:analyze",
    "test": "npm run test:web && npm run test:backend && npm run test:sdk",
    "test:web": "cd apps/web && npm test",
    "test:backend": "cd apps/backend && npm test",
    "test:mobile": "cd apps/mobile && npm test",
    "test:sdk": "cd packages/sdk && npm test",
    "lint": "npm run lint:web && npm run lint:backend && npm run lint:sdk",
    "lint:web": "cd apps/web && npm run lint",
    "lint:backend": "cd apps/backend && npm run lint",
    "lint:mobile": "cd apps/mobile && npm run lint",
    "lint:sdk": "cd packages/sdk && npm run lint",
    "install:all": "npm install && cd apps/web && npm install && cd ../backend && npm install && cd ../../packages/sdk && npm install",
    "start": "cd apps/backend && npm start",
    "railway:build": "npm run build",
    "railway:start": "cd apps/backend && npm start",
    "railway:validate": "./scripts/validate-railway.sh",
    "firebase:validate": "./scripts/validate-firebase-production.sh",
    "deploy": "npm run build && npm run deploy:web && npm run deploy:backend",
    "deploy:web": "cd apps/web && npm run deploy",
    "deploy:backend": "cd apps/backend && npm run deploy"
  },
  "keywords": [
    "skill-sharing",
    "community",
    "education",
    "react-native",
    "nodejs",
    "firebase",
    "ai"
  ],
  "author": "GooseyPrime",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}